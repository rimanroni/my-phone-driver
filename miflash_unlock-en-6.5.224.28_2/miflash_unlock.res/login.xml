<?xml version="1.0" encoding="utf-8"?>
<Window >
  <VerticalLayout>
    <HorizontalLayout left="0" right="0" top="0" bottom="0" align="center,venter" >
      <!--SPACE | MIUI-LOGO | SPACE | OTHER-->

      <!--SPACE-->
      <HorizontalLayout  width="122"/>

      <!--MIUI-LOGO-->
      <VerticalLayout width="209">
        <VerticalLayout width="147" />
        <Control height="267" bkimage="drawable\login.png" align="center,venter"/>
        <VerticalLayout />
      </VerticalLayout>
      <!--SPACE-->
      <HorizontalLayout width="29"/>

      <!--OTHER-->
      <VerticalLayout width="450">
        <VerticalLayout height="100"/>
        <Label text="Sign in with your Mi Account to unlock" height="36" font="22" textcolor="#000000"/>
        <Label text="Unlocking your device may not be safe" height="25" font="14" textcolor="#ff4a41"/>
        <VerticalLayout name="login_error_msg_layout" height="40" >
          <VerticalLayout />
          <Label name="error_msg_label" font="12" height="30" text="" textcolor="#ff4a41" align="near,venter" />
        </VerticalLayout>

        <VerticalLayout width="262">
          <!--login by id and password-->
          <VerticalLayout height="82" bkimage="drawable\two_lines_edit_bg.png">
            <VerticalLayout height="7" />
            <HorizontalLayout >
              <HorizontalLayout width="2"/>
              <MEdit name="account_id_input" width="250" placestring="Email/Phone/Mi Account ID" placetextcolor="#8d8d8d" font="14" height="31"
                  multiline="false" textlimit="40" wanttab="false" wantreturn="false" autohscroll="false" align="venter"/>
            </HorizontalLayout>
            <VerticalLayout height="5" />
            <HorizontalLayout >
              <HorizontalLayout width="2"/>
              <MEdit name="account_pwd_input" width="250" placestring="Password" placetextcolor="#8d8d8d" font="14" height="31"  password="true"
                  multiline="false" textlimit="40" wanttab="false" wantreturn="false" autohscroll="false" align="venter" visible="true"/>
            </HorizontalLayout>
          </VerticalLayout>

          <!--login by aunamic code-->
          <VerticalLayout height="5"/>

          <VerticalLayout name="account_dynamic_code_layout" height="35" bkimage="drawable\single_line_edit_bg.png" visible="false" >
            <VerticalLayout height="1" />
            <HorizontalLayout >
              <HorizontalLayout width="2"/>
              <MEdit name="account_dynamic_code_input_box" width="255" placestring="Enter 6-digit verification code" tooltip="Enter 6-digit code generated by Mi Authenticator" placetextcolor="#8d8d8d" font="14" height="31"
                    multiline="false" textlimit="40" wanttab="false" wantreturn="false" autohscroll="false" align="venter"/>
            </HorizontalLayout>
          </VerticalLayout>

          <!--login by verify code-->
          <HorizontalLayout name="account_verify_code_layout" height="50" visible="false" childvalign="vcenter">
              <MEdit name="account_verify_code_input" width="160" height="32" font="14"  placestring="Enter verification code" placetextcolor="#888888"
              align="near,venter" text="" multiline="false" textlimit="40" wanttab="false" wantreturn="false" autohscroll="false"
                      bkimage="file='drawable\single_line_edit_bg.png' corner='4,4,4,4'" padding="0,5,0,5"/>
              <Button name="account_verify_code_picture" tooltip="Click refresh" height="45" normalimage="" hotimage="" pushedimage="" padding="1,1,1,1"/>
          </HorizontalLayout>

          <VerticalLayout height="15"/>
          <VerticalLayout height="42">
            <Button name="login_btn" text="Sign in" height="42" font="14" textcolor="#ffffff" normalimage="file='drawable\green_btn_list.png' source='0,0,262,42'" hotimage="file='drawable\green_btn_list.png' source='262,0,524,42'" pushedimage="file='drawable\green_btn_list.png' source='524,0,786,42'" disabledimage="file='drawable\common_btn.png' source='0,0,142,42' corner='4,4,4,4'"/>
          </VerticalLayout>

          <VerticalLayout height="10"/>
          <HorizontalLayout height="20" childalign="center" childvalign="vcenter">
            <HorizontalLayout>
              </HorizontalLayout>
            <Button name="reg_account_btn" text="Sign up" width="70" font="14" textcolor="#999999" align="center,venter" />
            <Control width="1" height="15" bkimage="drawable\I.png" align="center"/>
            <Button name="forget_pwd_btn" text="Forget password" width="120" font="14" textcolor="#999999" align="center,venter"/>
          </HorizontalLayout>
        </VerticalLayout>
      </VerticalLayout>
      <VerticalLayout />
    </HorizontalLayout>
  </VerticalLayout>
</Window>